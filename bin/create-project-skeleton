#!/bin/bash

BASEDIR=`readlink -f "$( dirname $0 )/.."`
PWD=`pwd`

PROJECT_DIR="$BASEDIR/../project"

mkdir -p "$PROJECT_DIR/app/config"
mkdir -p "$PROJECT_DIR/modules"
mkdir -p "$PROJECT_DIR/pub"

PROJECT_TEMPLATE_DIR="$PROJECT_DIR/app/templates"
if [ ! -d $PROJECT_TEMPLATE_DIR ]
then
    cp -R "$BASEDIR/etc/build/templates/project_templates" $PROJECT_TEMPLATE_DIR
fi

PROJECT_RESOURCES_DIR="$PROJECT_DIR/app/resources"
APP_RESOURCES_DIR="$BASEDIR/app/resources"
if [ ! -d $PROJECT_RESOURCES_DIR ]
then
    cp -R "$BASEDIR/etc/build/templates/project_resources" $PROJECT_RESOURCES_DIR
fi

if [ ! -L $APP_RESOURCES_DIR ]
then
    ln -s "../../project/app/resources" $APP_RESOURCES_DIR
fi



cd $PWD


