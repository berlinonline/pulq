#!/bin/bash

BASEDIR=`readlink -f "$( dirname $0 )/.."`
PWD=`pwd`

cd $BASEDIR
APP_PUB_DIR="$BASEDIR/pub"
PROJECT_PUB_DIR="../project/pub"
for ITEM in `ls $PROJECT_PUB_DIR`; do
    if [ ! -L $APP_PUB_DIR/$ITEM ]
    then
        echo "Linking $PROJECT_PUB_DIR/$ITEM -> pub/$ITEM"
        ln -s "../$PROJECT_PUB_DIR/$ITEM" "$APP_PUB_DIR/$ITEM"
    fi
done
cd $PWD
