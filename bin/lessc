#!/bin/sh

LOCAL_CONFIG_SH=`dirname $0`/../etc/local/local.config.sh

if [ -f $LOCAL_CONFIG_SH ] ; then
  . $LOCAL_CONFIG_SH
else
  echo "Required config file does not exists: ${LOCAL_CONFIG_SH}"
  echo "Have you run bin/configure-env.php allready?"
exit 0
fi
BASE_DIR="`dirname $0`/.."

if [ "$3" = "-watch" ]; then
    less-watcher -d @2
else
    lessc $@
fi
