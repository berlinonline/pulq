<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations 
    xmlns="http://agavi.org/agavi/config/parts/databases/1.0" 
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <ae:configuration>
        <databases default="default">
            <database name="default" class="Pulq\Agavi\Database\ElasticSearch\Database">
                <ae:parameter name="host">127.0.0.1</ae:parameter>
                <ae:parameter name="port">9200</ae:parameter>
                <ae:parameter name="transport">Http</ae:parameter>
                <ae:parameter name="index">
                    <ae:parameter name="name">%core.project_prefix%_%core.environment%_fe</ae:parameter>
                    <ae:parameter name="definition_file">%core.app_dir%/project/config/elasticsearch/default.index.json</ae:parameter>
                    <ae:parameter name="types">
                        <ae:parameter name="asset">%core.app_dir%/config/elasticsearch/asset.mapping.json</ae:parameter>
                    </ae:parameter>
                </ae:parameter>
            </database>
        </databases>
    </ae:configuration>
</ae:configurations>


