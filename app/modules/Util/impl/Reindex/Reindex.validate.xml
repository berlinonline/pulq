<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://agavi.org/agavi/config/parts/validators/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.config_dir%/validators.xml">

    <ae:configuration context="console">
        <validators>
            <validator class="Pulq\Agavi\Validator\CliCheckBackValidator" required="false">
                <argument>database</argument>
                <error>Please provide a name of a configured database</error>
                <ae:parameters>
                    <ae:parameter name="checkback">
                        <ae:parameter name="attempts">2</ae:parameter>
                        <ae:parameter name="validator">Pulq\Agavi\Validator\DatabaseNameValidator</ae:parameter>
                        <ae:parameter name="question">Please enter the name of a configured database:</ae:parameter>
                    </ae:parameter>
                </ae:parameters>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>
