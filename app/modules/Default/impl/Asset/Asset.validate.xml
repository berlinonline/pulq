<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/Topic/config/validators.xml">
    <ae:configuration>
        <validators>
            <validator name="asset" class="Pulq\Agavi\Validator\AssetValidator"> 
                <arguments>
                    <argument>module</argument>
                    <argument>asset</argument>
                </arguments>
                <errors>
                    <error for="not_found">Asset not found.</error>
                    <error for="invalid_module">Invalid module.</error>
                </errors>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>

