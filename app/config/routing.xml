<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/routing/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

    <ae:configuration context="web">
        <routes>
            <!-- Project routes -->
            <route name="localnews" pattern="^localnews" module="Localnews">
                <route name=".districtlist" pattern="^/districtlist$" action="Districtlist" />
                <route name=".index" pattern="^$" action="Index" />
            </route>

            <!-- /Project routes -->

            <!-- The last route in case the input URL is just "/". -->
            <route name="index" pattern="^/$" module="%actions.default_module%" action="%actions.default_action%" />

        <!--
            If no route matched here, the 404 action will be used.
            You could change that behavior by setting the last route above to use an empty pattern.
        -->
        </routes>
    </ae:configuration>

</ae:configurations>
