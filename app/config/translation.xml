<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/translation/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
    <ae:configuration>

        <available_locales default_locale="de_DE">
			<!-- German, Germany -->
            <available_locale identifier="de_DE">
                <ae:parameter name="description">Deutsch</ae:parameter>
            </available_locale>
			<!-- English, United States -->
            <available_locale identifier="en_EN">
                <ae:parameter name="description">English</ae:parameter>
            </available_locale>
        </available_locales>

       <translators default_domain="date_formats">
           <translator domain="date_formats">
                <translator domain="datetime">
                        <date_formatter>
                            <ae:parameters>
                                <ae:parameter name="type">datetime</ae:parameter>
                                <ae:parameter name="format">yyyy-MM-dd HH:mm:ss</ae:parameter>
                            </ae:parameters>
                        </date_formatter>
                </translator>
            </translator>
       </translators>

    </ae:configuration>

    <xi:include href="%core.module_dir%/Default/config/translation.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>

    <xi:include href="%core.module_dir%/Auth/config/translation.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>

    <xi:include href="%core.module_dir%/News/config/translation.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>

    <xi:include href="%core.module_dir%/Workflow/config/translation.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>

    <xi:include href="%core.module_dir%/Shofi/config/translation.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>

    <xi:include href="%core.module_dir%/Shofi_Categories/config/translation.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>

    <xi:include href="%core.module_dir%/Shofi_Verticals/config/translation.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>

</ae:configurations>