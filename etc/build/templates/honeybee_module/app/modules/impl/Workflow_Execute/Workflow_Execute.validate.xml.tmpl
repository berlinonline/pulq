<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/%%MODULE_NAME%%/config/validators.xml">
    <ae:configuration>
        <validators>

            <validator class="or" name="invalid_%%MODULE_PREFIX%%" required="true">
                <validator class="%%MODULE_NAME%%DocumentValidator" name="invalid_%%MODULE_PREFIX%%_data" required="false">
                    <arguments>
                        <argument>%%MODULE_PREFIX%%</argument>
                    </arguments>
                    <errors>
                        <error>An invalid (%%MODULE_PREFIX%%)id was given.</error>
                    </errors>
                </validator>

                <validator class="%%MODULE_NAME%%DocumentValidator" name="invalid_%%MODULE_PREFIX%%_id" required="false">
                    <arguments>
                        <argument>id</argument>
                    </arguments>
                    <errors>
                        <error>An invalid id was given.</error>
                    </errors>
                </validator>
            </validator>

            <validator class="string" name="invalid_gate" required="false">
                <arguments>
                    <argument>gate</argument>
                </arguments>
                <errors>
                    <error>An invalid gate was given.</error>
                </errors>
            </validator>

        </validators>
    </ae:configuration>
</ae:configurations>