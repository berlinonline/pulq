<!DOCTYPE HTML>
<html 
    xmlns="http://www.w3.org/1999/xhtml" 
    xml:lang="{{ locale.getLocaleLanguage() }}" 
    lang="{{ locale.getLocaleLanguage() }}" 
    dir="{{ dir }}" {{ rq.getAttribute('is_error_page') ? 'class="error-page"' : '' }}>
    <head>
        <title>{{ _title }}</title>
        <base href="{{ ro.getBaseHref() }}" id="base_href"/>
        <link rel="shortcut icon" type="image/x-icon" href="images/favicon.ico" />
        <!-- GoogleMaps code - @todo get this sucker oughta here! -->
        <!-- %%STYLESHEETS%% -->
    </head>
    <body>
        {{ slots.header|raw }}
        {{ inner|raw }}
        {{ slots.footer|raw }}

        <!-- %%JAVASCRIPTS%% -->
    </body>
</html>
